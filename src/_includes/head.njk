{# --- Social + SEO helpers --- #}
{%- set _desc = description or (content | excerpt(180)) or title -%}
{%- set _ogPath = image or cover or "/assets/images/og-twitter.png" -%}
{%- if _ogPath and _ogPath.startsWith('./') -%}
