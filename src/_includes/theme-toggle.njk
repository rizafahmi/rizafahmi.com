<script>
  const toggleBtn = document.getElementById('theme-toggle');
  const html = document.documentElement;
  
  const savedTheme = localStorage.getItem('theme');
  const systemTheme = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
  const initialTheme = savedTheme || systemTheme;
  
  html.setAttribute('data-theme', initialTheme);
  if (toggleBtn) {
    toggleBtn.innerText = initialTheme === 'dark' ? 'â˜€ï¸' : 'ğŸŒ™';
    toggleBtn.addEventListener('click', () => {
      const currentTheme = html.getAttribute('data-theme');
      const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
      
      html.setAttribute('data-theme', newTheme);
      localStorage.setItem('theme', newTheme);
      toggleBtn.innerText = newTheme === 'dark' ? 'â˜€ï¸' : 'ğŸŒ™';

      var utterancesFrame = document.querySelector('.utterances-frame');
      if (utterancesFrame) {
        utterancesFrame.contentWindow.postMessage(
          { type: 'set-theme', theme: newTheme === 'dark' ? 'github-dark' : 'github-light' },
          'https://utteranc.es'
        );
      }
    });
  }
</script>
