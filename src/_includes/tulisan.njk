title: Judul
---
<!DOCTYPE html>
<html lang="id">
  <head>
    <title>{{ title }} - Halo, Saya Riza!</title>
    <link rel="preload" as="style" href="/assets/global.css" type="text/css" />
    <link rel="stylesheet" href="/assets/global.css" type="text/css">
    <link rel="preload" as="style" href="/assets/tulisan.css" type="text/css" />
    <link rel="stylesheet" href="/assets/tulisan.css" type="text/css">
    {% include 'head.njk' %}
    <meta property="og:type" content="article" />
    <meta property="article:published_time" content="{{ (date or created) | dateToISO }}" />
    {%- if modified %}
    <meta property="article:modified_time" content="{{ modified | dateToISO }}" />
    {%- endif %}
    <meta property="article:author" content="Riza Fahmi" />

    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "headline": "{{ title | escape }}",
      "description": "{{ description or title | escape }}",
      "author": {
        "@type": "Person",
        "name": "Riza Fahmi",
        "url": "https://rizafahmi.com"
      },
      "datePublished": "{{ (date or created) | dateToISO }}",
      "dateModified": "{{ modified | dateToISO }}",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "https://rizafahmi.com{{ page.url }}"
      },
      "publisher": {
        "@type": "Person",
        "name": "Riza Fahmi"
      }
    }
    </script>
  </head>
  <body>
    <nav class="container" style="display: flex; justify-content: space-between; align-items: center;">
      {% include 'back_button.njk' %}
      <button id="theme-toggle" class="theme-toggle" aria-label="Toggle Dark Mode" style="background:none; border:none; cursor:pointer; font-size:1.5rem;">üåô</button>
    </nav>

    <main class="container">
      <article>
        <header>
          <h2>{{ title }}</h2>
          <div class="article-meta">
            {%- if created -%}
            <small>üå± Dibuat <time datetime="{{ created | readableDate }}">{{ created | readableDate }}</time>.</small>
            {%- endif -%}
            {%- if modified -%}
            <small class="note-modified">ü™¥ Diperbarui <time datetime="{{ modified | readableDate }}">{{ modified | readableDate }}</time>.</small>
            {%- endif -%}
            <small class="reading-time">‚è±Ô∏è {{ content | readingTime }}</small>
          </div>
          <small class="note-edit"> <a href="https://github.com/rizafahmi/rizafahmi.com/blob/main/{{ page.inputPath }}"><span role="img" aria-label="edit">‚úèÔ∏è</span> Edit {{ editLabel or "catatan" }} ini.</a></small>
        </header>

        {{ content | safe }}
      </article>
    </main>

    {%- if '/catatan/' in page.url %}
    <aside class="related-articles container">
      <h3>üìö Artikel Lainnya</h3>
      <div class="related-grid">
        {%- set count = 0 %}
        {%- for article in collections.latestCatatan %}
          {%- if article.url != page.url and count < 3 %}
            <a href="{{ article.url }}" class="related-card">
              <span class="related-title">{{ article.data.title }}</span>
            </a>
            {%- set count = count + 1 %}
          {%- endif %}
        {%- endfor %}
      </div>
    </aside>
    {%- endif %}

    <footer class="container">
      <hr />

      {%- set show_comments = false %}
      {%- if '/catatan/' in page.url %}{% set show_comments = true %}{%- endif %}
      {%- if page.url == '/now/' %}{% set show_comments = true %}{%- endif %}
      {%- if page.url == '/uses/' %}{% set show_comments = true %}{%- endif %}

      {%- if show_comments %}
      <div id="utterances-container"></div>
      <script>
        (function() {
          var theme = document.documentElement.getAttribute('data-theme') === 'dark' ? 'github-dark' : 'github-light';
          var script = document.createElement('script');
          script.src = 'https://utteranc.es/client.js';
          script.setAttribute('repo', 'rizafahmi/rizafahmi.com');
          script.setAttribute('issue-term', 'pathname');
          script.setAttribute('label', 'üí¨ Comment');
          script.setAttribute('theme', theme);
          script.setAttribute('crossorigin', 'anonymous');
          script.async = true;
          document.getElementById('utterances-container').appendChild(script);
        })();
      </script>
      {%- endif %}
    </footer>

    {% include 'analytics.njk' %}
    {% include 'theme-toggle.njk' %}
  </body>
</html>
