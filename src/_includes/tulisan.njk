<!DOCTYPE html>
<html lang="id">
  <head>
    <title>{{ title }} - Halo, Saya Riza!</title>
    <link rel="preload" as="style" href="/assets/global.css" type="text/css" />
    <link rel="stylesheet" href="/assets/global.css" type="text/css">
    <link rel="preload" as="style" href="/assets/tulisan.css" type="text/css" />
    <link rel="stylesheet" href="/assets/tulisan.css" type="text/css">
    {% include 'head.njk' %}
    <meta property="og:type" content="article" />
    <meta property="article:published_time" content="{{ (date or created) | dateToISO }}" />
    {%- if modified %}
    <meta property="article:modified_time" content="{{ modified | dateToISO }}" />
    {%- endif %}
    <meta property="article:author" content="Riza Fahmi" />

    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "headline": "{{ title | escape }}",
      "description": "{{ description or title | escape }}",
      "author": {
        "@type": "Person",
        "name": "Riza Fahmi",
        "url": "https://rizafahmi.com"
      },
      "datePublished": "{{ (date or created) | dateToISO }}",
      "dateModified": "{{ modified | dateToISO }}",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "https://rizafahmi.com{{ page.url }}"
      },
      "publisher": {
        "@type": "Person",
        "name": "Riza Fahmi"
      }
    }
    </script>
  </head>
  <body>
    <div class="reading-progress" id="reading-progress"></div>
    <a href="#main-content" class="skip-link">Langsung ke konten utama</a>
    <nav class="container" style="display: flex; justify-content: space-between; align-items: center;">
      <ol class="breadcrumb" aria-label="Breadcrumb" itemscope itemtype="https://schema.org/BreadcrumbList">
        <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <a itemprop="item" href="/"><span itemprop="name">Beranda</span></a>
          <meta itemprop="position" content="1" />
        </li>
        <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <a itemprop="item" href="/articles/"><span itemprop="name">Catatan</span></a>
          <meta itemprop="position" content="2" />
        </li>
        <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem" aria-current="page">
          <span itemprop="name">{{ title }}</span>
          <meta itemprop="position" content="3" />
        </li>
      </ol>
      <button id="theme-toggle" class="theme-toggle" aria-label="Toggle Dark Mode" style="background:none; border:none; cursor:pointer; font-size:1.5rem;">üåô</button>
    </nav>

    <main class="container" id="main-content">
      <article data-pagefind-body>
      {%- set canonicalUrl = "https://rizafahmi.com" + page.url -%}
      {%- set xShareHref = "https://twitter.com/intent/tweet?text=" + (title | urlencode) + "&url=" + (canonicalUrl | urlencode) -%}
      {%- set liShareHref = "https://www.linkedin.com/shareArticle?mini=true&url=" + (canonicalUrl | urlencode) + "&title=" + (title | urlencode) + "&summary=" + ((description or title) | urlencode) -%}

      <h2>{{ title }}</h2>
      <div class="article-meta">
        {%- if created -%}
        <small>üå± Dibuat <time datetime="{{ created | readableDate }}">{{ created | readableDate }}</time>.</small>
        {%- endif -%}
        {%- if modified -%}
        <small class="note-modified">ü™¥ Diperbarui <time datetime="{{ modified | readableDate }}">{{ modified | readableDate }}</time>.</small>
        {%- endif -%}
        <small class="reading-time">‚è±Ô∏è {{ content | readingTime }}</small>
        {%- if goatcounterViews and goatcounterViews[page.url] %}
        <small class="view-count" aria-label="Popularitas artikel">üî• {{ goatcounterViews[page.url] | localeString }} dibaca</small>
        {%- endif %}
        <small class="share-links" aria-label="Bagikan">
          <button
            type="button"
            class="share-native"
            data-share-native
            data-share-title="{{ title | escape }}"
            data-share-url="{{ canonicalUrl }}"
            hidden>
            üîó Bagikan bila bermanfaat
          </button>

          <span class="share-fallback" data-share-fallback>
            üîó Bagikan bila bermanfaat:
            <a class="share-link" href="{{ xShareHref }}" target="_blank" rel="noopener noreferrer" aria-label="Bagikan ke X">X</a>
            <a class="share-link" href="{{ liShareHref }}" target="_blank" rel="noopener noreferrer" aria-label="Bagikan ke LinkedIn">LinkedIn</a>
            <button type="button" class="share-link share-copy" data-share-copy data-share-url="{{ canonicalUrl }}" aria-label="Salin link">üìã Salin</button>
          </span>
        </small>

        {%- if tags %}
          {%- set _tags = tags %}
          {%- if _tags is string %}{% set _tags = [_tags] %}{% endif %}
          {%- set visibleTags = [] %}
          {%- for t in _tags %}
            {%- if t and t != 'catatan' and t != 'all' and t != 'post' and t != 'nav' %}
              {%- set visibleTags = (visibleTags.push(t), visibleTags) %}
            {%- endif %}
          {%- endfor %}

          {%- if visibleTags.length %}
            <small class="note-tags">üè∑Ô∏è Topik:
              {%- for t in visibleTags %}
                <a href="/tags/{{ t | url }}/">{{ t }}</a>{% if not loop.last %}, {% endif %}
              {%- endfor %}
            </small>
          {%- endif %}
        {%- endif %}
      </div>
      <small class="note-edit"> <a href="https://github.com/rizafahmi/rizafahmi.com/blob/main/{{ page.inputPath }}"><span role="img" aria-label="edit">‚úèÔ∏è</span> Edit {{ editLabel or "catatan" }} ini.</a></small>
      <div class="note-edit">
      </div>

      {{ content | safe }}

      {% include 'reactions.njk' %}

      <section class="follow-cta" aria-label="Ikuti saya">
        <p>
          Jika kamu suka tulisan ini, ikuti saya di
          <a href="https://x.com/rizafahmi22" target="_blank" rel="noopener noreferrer">X</a>
          dan
          <a href="https://linkedin.com/in/rizafahmi" target="_blank" rel="noopener noreferrer">LinkedIn</a>.
        </p>
      </section>

      {%- if tags and 'catatan' in tags %}
      <section class="related-articles">
        <h3>üìö Artikel Terkait</h3>
        <div class="related-grid">
          {%- set related = collections.catatan | relatedByTags(visibleTags, page.url, 3) %}
          {%- for article in related %}
            <a href="{{ article.url }}" class="related-card">
              <span class="related-title">{{ article.data.title }}</span>
            </a>
          {%- endfor %}
        </div>
      </section>
      {%- endif %}

      <hr />

      {%- set show_comments = false %}
      {%- if tags and 'catatan' in tags %}{% set show_comments = true %}{%- endif %}
      {%- if page.url == '/now/' %}{% set show_comments = true %}{%- endif %}
      {%- if page.url == '/uses/' %}{% set show_comments = true %}{%- endif %}

      {%- if show_comments %}
      <div id="utterances-container"></div>
      <script>
        (function() {
          var theme = document.documentElement.getAttribute('data-theme') === 'dark' ? 'github-dark' : 'github-light';
          var script = document.createElement('script');
          script.src = 'https://utteranc.es/client.js';
          script.setAttribute('repo', 'rizafahmi/rizafahmi.com');
          script.setAttribute('issue-term', 'pathname');
          script.setAttribute('label', 'üí¨ Comment');
          script.setAttribute('theme', theme);
          script.setAttribute('crossorigin', 'anonymous');
          script.async = true;
          document.getElementById('utterances-container').appendChild(script);
        })();
      </script>
      {%- endif %}
      </article>
    </main>

    <footer class="container">

      <script>
        (function () {
          const btn = document.querySelector('[data-share-native]');
          const fallback = document.querySelector('[data-share-fallback]');
          const copyBtn = document.querySelector('[data-share-copy]');

          if (!btn || !fallback) return;

          // Native share (mostly mobile + some desktop Safari)
          if (navigator && typeof navigator.share === 'function') {
            btn.hidden = false;
            fallback.hidden = true;

            btn.addEventListener('click', async function () {
              const title = btn.getAttribute('data-share-title') || document.title;
              const url = btn.getAttribute('data-share-url') || window.location.href;
              const text = `${title} ${url}`;

              try {
                await navigator.share({ title, text, url });
              } catch (e) {
                // User cancelled or share failed; ignore.
              }
            });
          } else {
            btn.hidden = true;
            fallback.hidden = false;
          }

          // Clipboard fallback (nice for desktop)
          if (copyBtn && navigator && navigator.clipboard && navigator.clipboard.writeText) {
            copyBtn.addEventListener('click', async function () {
              const url = copyBtn.getAttribute('data-share-url') || window.location.href;
              try {
                await navigator.clipboard.writeText(url);
                const old = copyBtn.textContent;
                copyBtn.textContent = '‚úÖ Tersalin';
                setTimeout(() => (copyBtn.textContent = old), 1200);
              } catch (e) {
                // ignore
              }
            });
          }
        })();
      </script>

    </footer>
    <script>
      (function() {
        var progressBar = document.getElementById('reading-progress');
        if (progressBar) {
          var ticking = false;
          window.addEventListener('scroll', function() {
            if (!ticking) {
              ticking = true;
              requestAnimationFrame(function() {
                var winScroll = document.body.scrollTop || document.documentElement.scrollTop;
                var height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
                var scrolled = (winScroll / height) * 100;
                progressBar.style.width = scrolled + '%';
                ticking = false;
              });
            }
          });
        }
      })();
    </script>
    <script>
      document.querySelectorAll('.code-copy').forEach(function (btn) {
        btn.addEventListener('click', function () {
          var block = btn.closest('.code-block');
          var code = block.querySelector('code');
          var text = Array.from(code.querySelectorAll('.line')).map(function (line) {
            return Array.from(line.childNodes).filter(function (node) {
              return !node.classList || !node.classList.contains('line-prefix');
            }).map(function (node) { return node.textContent; }).join('');
          }).join('\n').replace(/\n+$/, '');
          navigator.clipboard.writeText(text).then(function () {
            btn.textContent = '‚úÖ Tersalin';
            setTimeout(function () { btn.textContent = 'Salin'; }, 1200);
          });
        });
      });
    </script>
    {% include 'analytics.njk' %}
    {% include 'webvitals.njk' %}
    {% include 'theme-toggle.njk' %}
  </body>
</html>
