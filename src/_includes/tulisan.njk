    <meta name="msapplication-TileColor" content="#211a1e">
    <meta name="msapplication-TileImage" content="/assets/images/favico/ms-icon-144x144.png">
    <meta name="theme-color" content="#211a1e">
    <link rel="alternate" type="application/rss+xml" href="https://rizafahmi.com/feed.xml" />

    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "headline": "{{ title | escape }}",
      "description": "{{ description or title | escape }}",
      "author": {
        "@type": "Person",
        "name": "Riza Fahmi",
        "url": "https://rizafahmi.com"
      },
      "datePublished": "{{ (date or created) | dateToISO }}",
      "dateModified": "{{ modified | dateToISO }}",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "https://rizafahmi.com{{ page.url }}"
      },
      "publisher": {
        "@type": "Person",
        "name": "Riza Fahmi"
      }
    }
    </script>
  </head>
  <body>
    <div class="container">
      {% include 'back_button.njk' %}

      <h2>{{ title }}</h2>
      {%- if created -%}
      <small>üå± Dibuat <time datetime="{{ created | readableDate }}">{{ created | readableDate }}</time>.</small>
      {%- endif -%}
      {%- if modified -%}
      <small class="note-modified">ü™¥ Diperbarui <time datetime="{{ modified | readableDate }}">{{ modified | readableDate }}</time>.</small>
      {%- endif -%}
      <small class="note-edit"> <a href="https://github.com/rizafahmi/rizafahmi.com/blob/master/{{ page.inputPath }}"><span role="img" aria-label="edit">‚úèÔ∏è</span> Edit {{ editLabel or "catatan" }} ini.</a></small>
      <div class="note-edit">
      </div>

      {{ content | safe }}

      <!-- Latest Articles -->
      {%- if '/catatan/' in page.url %}
      <section class="related-articles">
        <h3>üìö Artikel Terbaru</h3>
        <div class="related-grid">
          {%- set currentUrl = page.url %}
          {%- set count = 0 %}
          {%- for article in collections.catatan | reverse %}
            {%- if article.url != currentUrl and count < 3 %}
              <a href="{{ article.url }}" class="related-card">
                <span class="related-title">{{ article.data.title }}</span>
                {%- if article.data.created %}
                <span class="related-date">{{ article.data.created | readableDate }}</span>
                {%- endif %}
              </a>
              {%- set count = count + 1 %}
            {%- endif %}
          {%- endfor %}
        </div>
      </section>
      {%- endif %}

      <hr />

      {%- set show_comments = false %}
      {%- if '/catatan/' in page.url %}{% set show_comments = true %}{%- endif %}
      {%- if page.url == '/now/' %}{% set show_comments = true %}{%- endif %}
      {%- if page.url == '/uses/' %}{% set show_comments = true %}{%- endif %}
      
      {%- if show_comments %}
      <script src="https://utteranc.es/client.js"
        repo="rizafahmi/rizafahmi.com"
        issue-term="pathname"
        label="üí¨ Comment"
        theme="github-light"
        crossorigin="anonymous"
        async>
      </script>
      {%- endif %}




      <script data-goatcounter="https://rizafahmi.goatcounter.com/count"
        async src="//gc.zgo.at/count.js"></script>
      <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
  </body>
</html>
