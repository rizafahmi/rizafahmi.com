---
<!DOCTYPE html>
<html lang="id">
  <head>
    <title>{{ title }} - Halo, Saya Riza!</title>
    <link rel="preload" as="style" href="/assets/global.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="/assets/global.css" type="text/css" media="screen">
    <link rel="preload" as="style" href="/assets/tulisan.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="/assets/tulisan.css" type="text/css" media="screen">
    {% include 'head.njk' %}

    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "headline": "{{ title | escape }}",
      "description": "{{ description or title | escape }}",
      "author": {
        "@type": "Person",
        "name": "Riza Fahmi",
        "url": "https://rizafahmi.com"
      },
      "datePublished": "{{ (date or created) | dateToISO }}",
      "dateModified": "{{ modified | dateToISO }}",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "https://rizafahmi.com{{ page.url }}"
      },
      "publisher": {
        "@type": "Person",
        "name": "Riza Fahmi"
      }
    }
    </script>
  </head>
  <body>
    <div class="container">
      <div style="display: flex; justify-content: space-between; align-items: center;">
        {% include 'back_button.njk' %}
        <button id="theme-toggle" class="theme-toggle" aria-label="Toggle Dark Mode" style="background:none; border:none; cursor:pointer; font-size:1.5rem;">ğŸŒ™</button>
      </div>

      {%- set canonicalUrl = "https://rizafahmi.com" + page.url -%}
      {%- set xShareHref = "https://twitter.com/intent/tweet?text=" + (title | urlencode) + "&url=" + (canonicalUrl | urlencode) -%}
      {%- set liShareHref = "https://www.linkedin.com/shareArticle?mini=true&url=" + (canonicalUrl | urlencode) + "&title=" + (title | urlencode) + "&summary=" + ((description or title) | urlencode) -%}

      <h2>{{ title }}</h2>
      <div class="article-meta">
        {%- if created -%}
        <small>ğŸŒ± Dibuat <time datetime="{{ created | readableDate }}">{{ created | readableDate }}</time>.</small>
        {%- endif -%}
        {%- if modified -%}
        <small class="note-modified">ğŸª´ Diperbarui <time datetime="{{ modified | readableDate }}">{{ modified | readableDate }}</time>.</small>
        {%- endif -%}
        <small class="reading-time">â±ï¸ {{ content | readingTime }}</small>
        <small class="share-links" aria-label="Bagikan">
          <button
            type="button"
            class="share-native"
            data-share-native
            data-share-title="{{ title | escape }}"
            data-share-url="{{ canonicalUrl }}"
            hidden>
            ğŸ”— Bagikan bila bermanfaat
          </button>

          <span class="share-fallback" data-share-fallback>
            ğŸ”— Bagikan bila bermanfaat:
            <a class="share-link" href="{{ xShareHref }}" target="_blank" rel="noopener noreferrer" aria-label="Bagikan ke X">X</a>
            <a class="share-link" href="{{ liShareHref }}" target="_blank" rel="noopener noreferrer" aria-label="Bagikan ke LinkedIn">LinkedIn</a>
            <button type="button" class="share-link share-copy" data-share-copy data-share-url="{{ canonicalUrl }}" aria-label="Salin link">ğŸ“‹ Salin</button>
          </span>
        </small>

        {%- if tags %}
          {%- set _tags = tags %}
          {%- if _tags is string %}{% set _tags = [_tags] %}{% endif %}
          {%- set visibleTags = [] %}
          {%- for t in _tags %}
            {%- if t and t != 'catatan' and t != 'all' and t != 'post' and t != 'nav' %}
              {%- set visibleTags = (visibleTags.push(t), visibleTags) %}
            {%- endif %}
          {%- endfor %}

          {%- if visibleTags.length %}
            <small class="note-tags">ğŸ·ï¸ Topik:
              {%- for t in visibleTags %}
                <a href="/tags/{{ t | url }}/">{{ t }}</a>{% if not loop.last %}, {% endif %}
              {%- endfor %}
            </small>
          {%- endif %}
        {%- endif %}
      </div>
      <small class="note-edit"> <a href="https://github.com/rizafahmi/rizafahmi.com/blob/main/{{ page.inputPath }}"><span role="img" aria-label="edit">âœï¸</span> Edit {{ editLabel or "catatan" }} ini.</a></small>
      <div class="note-edit">
      </div>

      {{ content | safe }}

      <section class="follow-cta" aria-label="Ikuti saya">
        <p>
          Jika kamu suka tulisan ini, ikuti saya di
          <a href="https://x.com/rizafahmi22" target="_blank" rel="noopener noreferrer">X</a>
          dan
          <a href="https://linkedin.com/in/rizafahmi" target="_blank" rel="noopener noreferrer">LinkedIn</a>.
        </p>
      </section>

      {%- if '/catatan/' in page.url %}
      <section class="related-articles">
        <h3>ğŸ“š Artikel Terkait</h3>
        <div class="related-grid">
          {%- set related = collections.catatan | relatedByTags(visibleTags, page.url, 3) %}
          {%- for article in related %}
            <a href="{{ article.url }}" class="related-card">
              <span class="related-title">{{ article.data.title }}</span>
            </a>
          {%- endfor %}
        </div>
      </section>
      {%- endif %}

      <hr />

      {%- set show_comments = false %}
      {%- if '/catatan/' in page.url %}{% set show_comments = true %}{%- endif %}
      {%- if page.url == '/now/' %}{% set show_comments = true %}{%- endif %}
      {%- if page.url == '/uses/' %}{% set show_comments = true %}{%- endif %}
      
      {%- if show_comments %}
      <script src="https://utteranc.es/client.js"
        repo="rizafahmi/rizafahmi.com"
        issue-term="pathname"
        label="ğŸ’¬ Comment"
        theme="github-light"
        crossorigin="anonymous"
        async>
      </script>
      {%- endif %}

      <script>
        (function () {
          const btn = document.querySelector('[data-share-native]');
          const fallback = document.querySelector('[data-share-fallback]');
          const copyBtn = document.querySelector('[data-share-copy]');

          if (!btn || !fallback) return;

          // Native share (mostly mobile + some desktop Safari)
          if (navigator && typeof navigator.share === 'function') {
            btn.hidden = false;
            fallback.hidden = true;

            btn.addEventListener('click', async function () {
              const title = btn.getAttribute('data-share-title') || document.title;
              const url = btn.getAttribute('data-share-url') || window.location.href;
              const text = `${title} ${url}`;

              try {
                await navigator.share({ title, text, url });
              } catch (e) {
                // User cancelled or share failed; ignore.
              }
            });
          } else {
            btn.hidden = true;
            fallback.hidden = false;
          }

          // Clipboard fallback (nice for desktop)
          if (copyBtn && navigator && navigator.clipboard && navigator.clipboard.writeText) {
            copyBtn.addEventListener('click', async function () {
              const url = copyBtn.getAttribute('data-share-url') || window.location.href;
              try {
                await navigator.clipboard.writeText(url);
                const old = copyBtn.textContent;
                copyBtn.textContent = 'âœ… Tersalin';
                setTimeout(() => (copyBtn.textContent = old), 1200);
              } catch (e) {
                // ignore
              }
            });
          }
        })();
      </script>

      {% include 'analytics.njk' %}
      {% include 'theme-toggle.njk' %}
  </body>
</html>
